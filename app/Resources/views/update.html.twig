{% extends 'base.html.twig' %}

{% block body %}

  <div class="div_center">

    <p class="text-center text-white"><h1 class="text-center text-white">Créer une annonce</h1></p>

<form action= "{{ path('modifier') }}" method="POST">
    <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="inputGroup-sizing-default" >Titre de l'annonce</span>
  </div>
  <input value={{ titre }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="titre">
</div>



<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default" >Nombre de places</span>
</div>
<input value={{ places }}  type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="places">
</div>


<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default" >Adresse</span>
</div>
<input value={{ adresse }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="adresse">
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default" >Ville</span>
</div>
<input value={{ ville }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="ville">
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default">Type du logement</span>
</div>
<input value={{ type }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="type">
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default">Nombre de pièces</span>
</div>
<input value={{ nbrpieces }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="nbrpieces">
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default">Surface</span>
</div>
<input value={{ surface }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="surface">
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default">Loyer HC</span>
</div>
<input value={{ loyerhc }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="loyerhc">
</div>

<div class="input-group mb-3">
<div class="input-group-prepend">
<span class="input-group-text" id="inputGroup-sizing-default">Charges</span>
</div>
<input value={{ charges }} type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="charges">
</div>

<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text">Description</span>
  </div>
  <textarea value={{ description }} class="form-control" aria-label="With textarea" name="descr"></textarea>
</div>
<input type="hidden" name="id" value={{ id }} />
<button type="submit" class="btn btn-dark">Modifier l'annonce</button>

</form>
</div>
{% endblock %}
